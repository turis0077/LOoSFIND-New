<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="627.0" prefWidth="828.0" style="-fx-background-color: #2E3B40;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23" fx:controller="controller.VentanaRegistroObjeto">
    
    <VBox alignment="CENTER" layoutX="134.0" layoutY="47.0" maxWidth="560.0" prefHeight="533.0" prefWidth="560.0" spacing="10" style="-fx-background-color: #2F3133; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 1; -fx-border-color: #2D3E35; -fx-border-width: 2;">
        <!-- Título -->
        <Label style="-fx-font-size: 18px; -fx-text-fill: white;" text="Nuevo Objeto:" />
        <Label style="-fx-text-fill: white;" text="Ingresa los datos que se te solicitan para describir al objeto que encontraste o perdiste:" />
        
        <VBox spacing="8">
            <Label style="-fx-text-fill: white;" text="Tipo de objeto:" />
            <TextField fx:id="tipoObjetoField" promptText="Tipo de objeto" />
            
            <Label style="-fx-text-fill: white;" text="Color:" />
            <TextField fx:id="colorField" promptText="Color" />
            
            <Label style="-fx-text-fill: white;" text="Dimensiones:" />
            <TextField fx:id="dimensionesField" promptText="Dimensiones" />
            
            <Label style="-fx-text-fill: white;" text="Forma:" />
            <TextField fx:id="formaField" promptText="Forma" />
            
            <Label style="-fx-text-fill: white;" text="Fecha: (YYYY-MM-DD)" />
            <TextField fx:id="fechaField" promptText="Fecha" />
            
            <Label style="-fx-text-fill: white;" text="Lugar donde fue encontrado o perdido:" />
            <TextField fx:id="ubicacionField" promptText="Lugar" />
            
            <Label style="-fx-text-fill: white;" text="Estado:" />
            <TextField fx:id="estadoField" promptText="Estado" />
            
            <Label style="-fx-text-fill: white;" text="¿Ya está en secretaría? (marca la casilla si ese es el caso)" />
            <CheckBox fx:id="enSecretariaCheckbox" />
        </VBox>
        
        <Button fx:id="registrarButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Registrar Objeto Nuevo" onAction="#registrarObjeto"/>
    </VBox>
</AnchorPane>
